<div class="login-form">
  <form method="POST" class="login">
    <input name="login" type="text" class="form-input" placeholder="Введите имя">
    <input name="email" type="text" class="form-input" placeholder="Введите почту">
    <input name="password" type="password" class="form-input" placeholder="Введите пароль">
    <select style="height: 50px; font-size: 25px" name="statuses">
        <option value="">Выберите значение статуса</option>
        {{#each status}}
          <option value="{{this.name}}">{{this.name}}</option>
        {{/each}}
      </select>
      <p class="message">Или добавьте свой статус:</p>
      <input name="name" type="text" class="form-input" placeholder="Введите статус">
    <button type="submit" class="button-login">Зарегистрироваться</button>
  </form>
</div>
